{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Degree Companion",
  "version": "0.3.0",
  "identifier": "companion.degree.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Degree Companion",
        "width": 900,
        "height": 1000,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/Icon-128x128@1x.icns",
      "icons/Icon-128x128@1x.ico",
      "icons/Icon-128x128@1x.png"
    ]
  }
}
